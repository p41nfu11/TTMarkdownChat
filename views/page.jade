html(ng-app="tchat")
	head
		title= "Real time web chat"
		link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.css')
		script(src='/lib/angular/angular.min.js')
		script(src='/js/app.js')
		script(src='/js/controllers.js')
		script(src='/js/directives.js')
		script(src='/socket.io/socket.io.js')
		script(src='/lib/markdown/markdown.min.js')
	body(ng-controller='TchatCtrl')
		.container
			.row
				.col-md-8(style="height: 350px;")
					div(ng-repeat="msg in messages") 
						div(ng-bind-html="msg")
				ul.col-md-4
					li(ng-repeat="user in users" ng-class-odd="'odd'") {{user.name}}		
			.row	
				div(class="form-group")
					label(for="text") Text
					.col-md-12
						.col-md-6
							textarea(,id="text", class="form-control", rows="10", placeholder="What's up?", ng-model="message", ng-change="updateFormatted()", required)
						.col-md-6
							div(ng-bind-html="formattedText") 
			.row
			br
			button(class="btn btn-default", ng-click="sendMessage()") Submit