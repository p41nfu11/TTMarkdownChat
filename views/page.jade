html(ng-app="tchat")
	head
		title= "Real time web chat"
		link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.css')
		script(src='/lib/angular/angular.min.js')
		script(src='/js/app.js')
		script(src='/js/controllers.js')
		script(src='/js/directives.js')
		script(src='/socket.io/socket.io.js')
		script(src='/lib/markdown/markdown.min.js')
	body(ng-controller='TchatCtrl')
		.container
			.col-md-8(style="height: 400px;")
				div(ng-repeat="msg in messages") {{msg}}
					
			.col-md-8
				form(ng-submit='sendMessage()')
					input(ng-model='message')
					input(type='submit', value='Envoyer')
			ul.col-md-4
				li(ng-repeat="user in users" ng-class-odd="'odd'") {{user.name}}